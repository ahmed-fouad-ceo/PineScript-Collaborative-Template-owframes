//@version=6
indicator("Collaborative Template Indicator", shorttitle="CTI", overlay=true)

// --- CONFIGURATION & INPUTS ---
var color mainColor = input.color(color.blue, "Plot Color")
var int maLength = input.int(20, "Moving Average Length", minval=1)

// --- CORE LOGIC ---
float maValue = ta.sma(close, maLength)

// --- OUTPUT ---
plot(maValue, color=mainColor, title="MA Value")

// Add a simple marker to show it's working and ready for feature additions
plotshape(ta.change(close) > 0 ? high : na, style=shape.circle, location=location.abovebar, color=color.green, size=size.tiny)
